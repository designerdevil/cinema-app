{
	"parser": "babel-eslint",
    "extends": ["airbnb", "plugin:react/recommended", "plugin:jsx-a11y/recommended"],
	// "extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"rules": {
        "indent": [1, 4, { "SwitchCase": 1, "MemberExpression": 1, "ArrayExpression": 1, "ObjectExpression": 1, "VariableDeclarator": 1 }],
        "react/jsx-indent": [1, 4],
        "react/jsx-indent-props": [1, 4],
        "react/prop-types": 0,
        "react/require-default-props": 0,
		"react/jsx-closing-bracket-location": 1,
		"comma-dangle": [1, "never"],
		"import/no-unresolved": 0,
		"linebreak-style": 0,
		"object-curly-spacing": 0,
		"arrow-body-style": 1,
		"no-console": 0,
		"max-len": 0,
		"prefer-template": 1,
		"global-require": 0,
		"no-underscore-dangle": 0,
		"no-unused-vars": 0,
        "no-mixed-spaces-and-tabs": 0,
        "no-use-before-define": 1,
        "no-confusing-arrow": 0,
        "no-undef": 1,
        "semi": 1,
        "spaced-comment": 1,
        "no-shadow": 1,
        "quotes": 1,
        "prefer-arrow-callback": 1,
        "object-shorthand": 1,
        "eqeqeq": 1,
        "space-infix-ops": 1,
        "no-useless-concat": 1,
        "prefer-const": 1,
        "no-multiple-empty-lines": 1,
        "arrow-parens": 0,
        "eol-last": 1,
        "vars-on-top": 1,
        "import/no-extraneous-dependencies": 1,
        "no-spaced-func": 1,
        "func-call-spacing": 1,
        "import/first": 1,
        "no-multi-spaces": 1,
        "no-var": 1,
        "no-plusplus": 1,
        "react/jsx-filename-extension": 1,
        "import/extensions": 0,
        "react/display-name": 1,
        "import/newline-after-import": 1,
        "key-spacing": 1,
        "react/forbid-prop-types": 1,
        "import/prefer-default-export": 1,
        "react/self-closing-comp": 1,
        "keyword-spacing": 1,
        "arrow-spacing": 1,
        "padded-blocks": 1,
        "no-param-reassign": 1,
        "no-tabs": 1,
        "no-extra-semi": 1,
        "no-useless-constructor": 1,
        "react/no-typos": 1,
        "no-else-return": 1,
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "to" ]
        }],
        "no-restricted-globals": ["error", "event", "fdescribe"]
	},
	"plugins": [
		"react",
		"jsx-a11y"
	],
	"globals": {
		"__DEVSERVER__": true,
		"__DEVCLIENT__": true,
        "jest": false,
        "expect": false,
        "describe": false,
        "xdescribe": false,
        "it": false,
        "xit": false,
        "beforeAll": false,
        "beforeEach": false,
        "afterAll": false,
        "afterEach": false
	}
}
